{% extends 'template.html.twig' %}

{% block title %}{{ parent() }} - {{ articles.getThetitle }}{% endblock %}

{% block titre %}{{ parent() }} - {{ articles.getThetitle }}{% endblock %}
{% block stitre %} Détail de notre article{% endblock %}
     {% block menu %}
         <ul class="navbar-nav ml-auto">
             <li class="nav-item active">
                 <a class="nav-link" href="#">Home
                 </a>
             </li>
             {% for itemMenu in sections %}
             <li class="nav-item">
                 <a class="nav-link" href="./section/"{{ itemMenu.getIdsections }}>{{ itemMenu.getThetitled }}</a>
             </li>
                {% endfor %}
         </ul>
     {% endblock %}
{% block contenu %}
        <h2>{{ articles.getTheTitle }}</h2>
        <h3>
            {% for categ in articles.getSectionssections %}{{ categ.getThetitled }} |
            {% endfor %}
        </h3>
        <p>{{ articles.getTheText|nl2br }}</p>
        <h4>Par {{ articles.getUsersusers.getTherealname }} le {{ articles.getThedate|date("d/m/Y à H \\h i \\m") }}<hr></h4>
{% endblock %}